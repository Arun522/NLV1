# NextMaze Landing Page Environment Configuration Template
# Copy this file to .env for local development
# For production, set these variables in your deployment environment

# ================================
# APPLICATION SETTINGS
# ================================

# Application environment (development, staging, production)
NODE_ENV=production

# Application port (used by PM2 and development server)
PORT=3001

# Application domain
REACT_APP_DOMAIN=www.nextmaze.in

# Application version (automatically populated from package.json)
REACT_APP_VERSION=1.0.0

# ================================
# API CONFIGURATION
# ================================

# Main API URL for NextMaze services
REACT_APP_API_URL=https://api.nextmaze.in

# API version
REACT_APP_API_VERSION=v1

# API timeout (in milliseconds)
REACT_APP_API_TIMEOUT=10000

# ================================
# EMAILJS CONFIGURATION
# ================================
# Required for contact form functionality
# Get these values from https://www.emailjs.com/

# EmailJS Service ID
VITE_EMAILJS_SERVICE_ID=service_k0d2uee

# EmailJS Template ID for contact form
VITE_EMAILJS_TEMPLATE_ID=template_cbzs20m

# EmailJS Public Key (User ID)
VITE_EMAILJS_PUBLIC_KEY=lJytnHVwFu3KDJcfy

# ================================
# ANALYTICS & TRACKING
# ================================

# Google Analytics Measurement ID (optional)
REACT_APP_GA_MEASUREMENT_ID=G-XXXXXXXXXX

# Google Tag Manager ID (optional)
REACT_APP_GTM_ID=GTM-XXXXXXX

# Facebook Pixel ID (optional)
REACT_APP_FB_PIXEL_ID=123456789

# Hotjar Site ID (optional)
REACT_APP_HOTJAR_ID=123456

# ================================
# SEO & SOCIAL MEDIA
# ================================

# Default meta title
REACT_APP_META_TITLE="NextMaze - Transform Your Learning Journey"

# Default meta description
REACT_APP_META_DESCRIPTION="Discover NextMaze's innovative learning platform with personalized courses, interactive content, and expert guidance. Start your transformation today."

# Keywords for SEO
REACT_APP_META_KEYWORDS="nextmaze, online learning, education platform, courses, skills development"

# Social media URLs
REACT_APP_SOCIAL_FACEBOOK=https://facebook.com/nextmaze
REACT_APP_SOCIAL_TWITTER=https://twitter.com/nextmaze
REACT_APP_SOCIAL_LINKEDIN=https://linkedin.com/company/nextmaze
REACT_APP_SOCIAL_INSTAGRAM=https://instagram.com/nextmaze

# ================================
# FEATURE FLAGS
# ================================

# Enable/disable contact form
REACT_APP_ENABLE_CONTACT_FORM=true

# Enable/disable newsletter signup
REACT_APP_ENABLE_NEWSLETTER=true

# Enable/disable chat widget
REACT_APP_ENABLE_CHAT=false

# Enable/disable testimonials section
REACT_APP_ENABLE_TESTIMONIALS=true

# Enable/disable blog section
REACT_APP_ENABLE_BLOG=false

# ================================
# PERFORMANCE & OPTIMIZATION
# ================================

# Enable service worker for caching
REACT_APP_ENABLE_SERVICE_WORKER=true

# Enable performance monitoring
REACT_APP_ENABLE_PERFORMANCE_MONITORING=true

# CDN URL for static assets (optional)
REACT_APP_CDN_URL=https://cdn.nextmaze.in

# Image optimization service URL (optional)
REACT_APP_IMAGE_SERVICE_URL=https://images.nextmaze.in

# ================================
# SECURITY SETTINGS
# ================================

# Content Security Policy nonce (auto-generated in production)
REACT_APP_CSP_NONCE=

# Allowed origins for CORS (development only)
REACT_APP_CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ================================
# THIRD-PARTY INTEGRATIONS
# ================================

# Stripe public key (if payment integration is needed)
REACT_APP_STRIPE_PUBLIC_KEY=pk_live_xxxxxxxxxxxxx

# Razorpay key (for Indian payments)
REACT_APP_RAZORPAY_KEY_ID=rzp_live_xxxxxxxxxx

# Calendly URL for scheduling (if needed)
REACT_APP_CALENDLY_URL=https://calendly.com/nextmaze

# Intercom App ID (for customer support chat)
REACT_APP_INTERCOM_APP_ID=xxxxxxxx

# ================================
# DEVELOPMENT SETTINGS
# ================================
# These settings are only used in development mode

# Enable React Developer Tools
REACT_APP_DEV_TOOLS=true

# Enable debug logging
REACT_APP_DEBUG_LOGGING=false

# Mock API responses (for development without backend)
REACT_APP_MOCK_API=false

# Disable SSL verification (development only)
REACT_APP_DISABLE_SSL_VERIFICATION=false

# ================================
# DEPLOYMENT SPECIFIC
# ================================

# Build optimization level (1-3, higher = more aggressive)
REACT_APP_BUILD_OPTIMIZATION=3

# Enable bundle analyzer
REACT_APP_BUNDLE_ANALYZER=false

# Source map generation (true for staging, false for production)
GENERATE_SOURCEMAP=false

# ================================
# MONITORING & LOGGING
# ================================

# Sentry DSN for error tracking (optional)
REACT_APP_SENTRY_DSN=https://xxxxxxxxxxxxx@sentry.io/xxxxxxx

# LogRocket App ID for session recording (optional)
REACT_APP_LOGROCKET_APP_ID=xxxxxx/nextmaze-landing

# Application Insights Connection String (optional)
REACT_APP_APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=xxxxxxxx

# ================================
# CACHE SETTINGS
# ================================

# Static asset cache duration (in seconds)
REACT_APP_CACHE_DURATION=31536000

# API response cache duration (in seconds)
REACT_APP_API_CACHE_DURATION=300

# ================================
# IMPORTANT NOTES
# ================================

# 1. Never commit .env files with real values to version control
# 2. Always use REACT_APP_ prefix for variables used in React components
# 3. Environment variables are embedded at build time, not runtime
# 4. For sensitive data, consider using a secrets management service
# 5. Production values should be set directly in your deployment environment
# 6. Restart your development server after changing environment variables

# ================================
# QUICK SETUP CHECKLIST
# ================================

# For local development:
# 1. Copy this file to .env
# 2. Update VITE_EMAILJS_* variables with your EmailJS credentials
# 3. Set REACT_APP_API_URL to your local API server if applicable
# 4. Uncomment and configure any optional services you want to use

# For production deployment:
# 1. Set NODE_ENV=production
# 2. Configure all REACT_APP_* variables for your domain
# 3. Set up VITE_EMAILJS_* variables with your production credentials
# 4. Configure analytics and monitoring services
# 5. Ensure all URLs use HTTPS in production